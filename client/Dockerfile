# ========================
# ‚öôÔ∏è Build stage
# ========================
FROM node:20-alpine3.18 AS builder

# C√†i c√¥ng c·ª• build ƒë·ªÉ tr√°nh l·ªói native module (rollup)
RUN apk update && \
    apk add --no-cache python3 make g++ build-base

WORKDIR /app

# Copy package.json
COPY package.json ./

# S·ª≠ d·ª•ng npm install thay v√¨ npm ci
RUN npm install

# Copy to√†n b·ªô source
COPY . .

# Build production b·∫±ng npm
RUN npm run build

# ========================
# üöÄ Production stage
# ========================
FROM nginx:stable-alpine

# Copy build output t·ª´ stage builder v√†o nginx
COPY --from=builder /app/dist /usr/share/nginx/html

# Thay config nginx n·∫øu c√≥
COPY nginx.conf /etc/nginx/conf.d/default.conf

# M·ªü port 80
EXPOSE 80

# Ch·∫°y nginx
CMD ["nginx", "-g", "daemon off;"]