# ========================
# ‚öôÔ∏è Build stage
# ========================
FROM node:20-alpine AS builder

# C√†i c√¥ng c·ª• build ƒë·ªÉ tr√°nh l·ªói native module (rollup)
RUN apk add --no-cache python3 make g++

# Enable yarn n·∫øu d√πng corepack
RUN corepack enable

WORKDIR /app

# Copy yarn.lock v√† package.json
COPY package.json yarn.lock ./

# C√†i dependencies
RUN yarn install --frozen-lockfile

# Copy to√†n b·ªô source
COPY . .

# Build production
RUN yarn build

# ========================
# üöÄ Production stage
# ========================
FROM nginx:stable-alpine

# Copy build output t·ª´ stage builder v√†o nginx
COPY --from=builder /app/dist /usr/share/nginx/html

# Thay config nginx n·∫øu c√≥
COPY nginx.conf /etc/nginx/conf.d/default.conf

# M·ªü port 80
EXPOSE 80

# Ch·∫°y nginx
CMD ["nginx", "-g", "daemon off;"]